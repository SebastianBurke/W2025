@page
@model LoginModel
@inject SignInManager<HIAAAUser> SignInManager
@{
    ViewData["Title"] = "Log in";
    if (!SignInManager.IsSignedIn(User))
        Layout = "_AccountLayout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-900 text-gray-200">
    <div class="w-full max-w-md bg-gray-800 rounded-lg shadow-md p-8">
        <h1 class="text-2xl font-semibold text-gray-100 mb-6 text-center">@ViewData["Title"]</h1>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-400 mb-4" role="alert"></div>
            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-300 mb-1">Email</label>
                <input asp-for="Input.Email"
                       class="input input-bordered w-full bg-gray-700 text-gray-200 border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                       autocomplete="username"
                       placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-400 text-sm"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-300 mb-1">Password</label>
                <input asp-for="Input.Password"
                       type="password"
                       class="input input-bordered w-full bg-gray-700 text-gray-200 border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                       autocomplete="current-password"
                       placeholder="********" />
                <span asp-validation-for="Input.Password" class="text-red-400 text-sm"></span>
            </div>

            <button id="login-submit" type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                Log in
            </button>
            <div class="mt-4 text-center">
                @* <p> *@
                @*     <a id="forgot-password" asp-page="./ForgotPassword" class="text-indigo-400 hover:underline">Forgot your password?</a> *@
                @* </p> *@
                <p class="mt-2">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-indigo-400 hover:underline">Register as a new user</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
