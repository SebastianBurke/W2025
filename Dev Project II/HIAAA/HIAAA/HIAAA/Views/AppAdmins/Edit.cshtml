@model HIAAA.DTO.AppAdminDTO

<form asp-action="Edit" class="mt-5 grid gap-6" style="gap:20px" asp-controller="AppAdmins">
    
    <input type="hidden" class="hidden" asp-for="Userid" value="@Model.Userid">
    <input type="hidden" class="hidden" asp-for="Username" value="@Model.Username">

    <div class="flex flex-col w-full">
        <label asp-for="Firstname">First Name</label>
        <input class="w-full input input-bordered" type="text" asp-for="Firstname" id="Firstname" name="Firstname">
    </div>
    <div class="flex flex-col w-full">
        <label asp-for="Lastname">Last Name</label>
        <input class="w-full input input-bordered" type="text" asp-for="Lastname" id="Lastname" name="Lastname">
    </div>

    <div class="flex flex-col w-full">
        <label name="Password">New Password</label>
        <input class="w-full input input-bordered" type="password" id="Password" name="Password">
    </div>

    <button class="w-full btn btn-active" type="submit">Save</button>
</form>